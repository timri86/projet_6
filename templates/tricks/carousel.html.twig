<div class="col-6">
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">

        {% for i, image in trick.image %}
            <div class="carousel-item {% if i==0 %}active{% endif %}">
                <img style="padding-bottom: 20px" class="d-block w-100" src="{{ asset('images/'~image) }}" alt="First slide">
            </div>
        {% endfor %}

    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
</div>
<div class="col-6">
    <div class="carousel-inner">

        {% for i, video in trick.video %}
            <div class="carousel-item {% if i==0 %}active{% endif %}">
                <iframe id="video{{ video.id }}" width="560" height="304" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            </div>
            <script>
                var regExp = /^.*(youtu\.be\/|v\/|u\/\w\/|embed\/|watch\?v=|\&v=)([^#\&\?]*).*/;
                var url = "{{ video.source }}";
                var match = url.match(regExp);
                if (match && match[2].length == 11)
                {
                    var id = match[2];
                    var embedlink = "http://www.youtube.com/embed/" + id;
                    var iframe = document.getElementById("video{{ video.id }}");
                    iframe.src = embedlink;
                }
            </script>
        {% endfor %}
    </div>
</div>
</div>